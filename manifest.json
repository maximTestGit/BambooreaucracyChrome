{
    "manifest_version": 3,
    "name": "Bambooreaucracy",
    "description": "Bambooreaucracy chrome extension",
    "version": "0.0.1",
    "icons": {
        "16": "logo/logo-16.png",
        "48": "logo/logo-48.png",
        "128": "logo/logo-128.png"
    },
    "options_page": "settings/settings.html",
    "action": {
        "default_title": "Bambooreaucracy Qognify",
        "default_popup": "popup/popup.html",
        "default_icon": "logo/logo-128.png"
    },
    "permissions": [
        "storage",
        "tabs",
        "unlimitedStorage",
        "windows"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["<all_urls>"]
    }]
}
